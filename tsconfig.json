{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "electron",
    "outDir": "dist/electron"
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["renderer"]
}